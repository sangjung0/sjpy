{
	"name": "sjpy_dev",
	"dockerComposeFile": "./docker-compose.yml",
	"service": "service",
    "remoteUser": "root",
	"workspaceFolder": "/workspaces/sjpy",
    "postCreateCommand": "bash ${containerWorkspaceFolder}/.devcontainer/post_create_command.sh",

    // for linux container
    // "initializeCommand": [
    //  "${localWorkspaceFolder}/.devcontainer/initialize_command.sh",
    //  "${localWorkspaceFolder}"
    // ],

    // for windows container
    "initializeCommand": [
        "${localWorkspaceFolder}\\.devcontainer\\initialize_command.cmd",
        "${localWorkspaceFolder}"
    ],

	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
                "ms-python.vscode-pylance",
                "ms-python.python",
                "ms-python.debugpy",
                "rsip-vision.nvidia-smi-plus",
                "ms-vscode.azurecli",
                "esbenp.prettier-vscode",
                "ms-toolsai.jupyter",
                "njpwerner.autodocstri",
                "formulahendry.code-runner",
                "streetsidesoftware.code-spell-checker",
                "naumovs.color-highlight",
                "oderwat.indent-rainbow",
                "ionutvmi.path-autocomplete",
                "mgesbert.python-path",
                "foxundermoon.shell-format",
                "gruntfuggly.todo-tree",
                "editorconfig.editorconfig",
                "ms-python.black-formatter",
                "jebbs.plantuml",
                "claudineyqr.plantuml-snippets"
			]
		}
	}
}
